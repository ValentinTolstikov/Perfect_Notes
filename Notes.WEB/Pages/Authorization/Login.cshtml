@page "/login"
@model Notes.WEB.Pages.Authorization.LoginModel
@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="~/css/site.css" rel="stylesheet" />
        <link href="~/css/fonts/Inter-Bold.otf" rel="fonts" />
        <title>Авторизация</title>
    </head>
    <body class="container">
        <form class="form">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="form-container">
                <h1 class="SemiBold40">Вход</h1>
                <div>
                    <input name="Login" id="Login" required class="input m20" placeholder="Логин" type="text" />
                </div>
                <div>
                    <input name="Password" id="Password" required minlength="6" class="input" placeholder="Пароль" type="password" />
                </div>
                <h3 id="remember_pas" class="remember-pas mb5">
                Забыли пароль?
                </h3>
                <button type="submit" formmethod="post" class="b24 button">Войти</button>
                <h5 class="red">@ViewData["err"]</h5>
                <div class="fl">
                    <h3 class="f16">Нет аккаунта?</h3>
                    <h3 id="register" cursor class="m5 f16 blue">Регистрация</h3>
                </div>
            </div>
        </form>
        <script src="~/js/login_script.js"></script>
    </body>
    </html>
}
